---
interface Props {
	title?: string;
}

const { title = "Project Title Goes Here" } = Astro.props;
---

<header class="top-header">
	<div class="container">
		<div class="row">
			<div class="col">
				<a class="logo" href="/">
					<img src="https://placehold.co/1440x1080" alt="PROJECTUPDATE"/> <!-- PROJECTUPDATE src, alt-->
				</a>
			</div> <!-- .col -->

			<div class="col">
				<h1>{title}</h1>
			</div> <!-- .col -->

			<div class="col">
				<div class="translations">
					<div class="language-links">
						<a href="#">Language One</a>
						<a href="#">Language Two</a>
						<a href="#">Language Three</a>
						<!-- PROJECTUPDATE Language Links -->
					</div>
					<div id="google_translate_element"></div>
				</div>
			</div> <!-- .col -->
		</div> <!-- .row -->
	</div> <!-- .container -->
</header>
